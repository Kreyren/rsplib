PLANETLAB_KEY=~/.ssh/planetlab
PLANETLAB_USER=due_test
PLANETLAB_COMPILEHOST="planetlab1.exp-math.uni-essen.de"   # "planet5.cs.huji.ac.il" "planetlab2.exp-math.uni-essen.de" "planetlab1.exp-math.uni-essen.de" "planetlab15.millennium.berkeley.edu"
PLANETLAB_YUMOPTS="--disablerepo=ThirdParty"
PLANETLAB_COMPILEPKGS="libtool gdb automake autoconf joe libstdc++-devel gcc gcc-c++ glib-devel glib2-devel make subversion libpcap bzip2-devel slocate"

DISTNAME="rsplib-2.4.0beta1"
DISTDIRNAME="rsplib"
DISTCONFOPT="--enable-csp --disable-qt"
DISTPRGS="registrar server calcappclient hsdump rootshell"
KILLALLMISC="perftool bzip2 gzip tar yum /usr/bin/python /usr/bin/yum"
DISTSTRIP=0
DISTMISC=""
SUIDPRGS="registrar server calcappclient hsdump rootshell"

OPT_CSP="-cspserver=132.252.150.151:2960 -cspinterval=1000"


SCTPLIB_DIRECTORY="/home/dreibh/src/sctplib1"
SCTPLIB_OPT="--enable-sctp-over-udp --enable-static --disable-shared --enable-maintainer-mode"
SOCKETAPI_DIRECTORY="/home/dreibh/src/socketapi"
SOCKETAPI_OPT="--enable-sctp-over-udp --enable-static --disable-shared --enable-maintainer-mode"


# Auf dem Server zum Test ausfÃ¼hren
# Ping + 16 MBytes /dev/urandom + SHA1 => 9s auf Athlon 1.3GHz
SERVER_TEST_TIMEOUT=36
SERVER_TEST="ping -W5 -c1 www.planet-lab.org && dd if=/dev/urandom of=test.data count=16000 bs=1000 && sha1sum test.data && rm -f test.data"

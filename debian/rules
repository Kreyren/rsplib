#!/usr/bin/make -f

%:
	dh $@

override_dh_auto_configure:
	cp /usr/share/misc/config.sub config.sub
	cp /usr/share/misc/config.guess config.guess
	./configure --enable-kernel-sctp --enable-qt --enable-csp --host=$(DEB_HOST_GNU_TYPE) --build=$(DEB_BUILD_GNU_TYPE) --prefix=/usr --mandir=\$${prefix}/share/man --infodir=\$${prefix}/share/info CFLAGS="$(CFLAGS)" LDFLAGS="-Wl,-z,defs"

override_dh_auto_clean:
	dh_auto_clean
	rm -f config.sub config.guess

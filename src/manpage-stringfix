#! /bin/sh
echo "Processing $1 ..."
sed -e '/^.\\"/b' \
-e '/^.ps/b' \
-e 's/--/\\-\\-/g' \
-e 's/ -/ \\-/g' \
-e 's/\"-/\"\\-/g' \
-e 's/\[-/\[\\-/g' \
-e 's/(-/(\\-/g' \
-e 's/{-/{\\-/g' \
-e 's/\]-/\]\\-/g' \
-e 's/)-/)\\-/g' \
-e 's/}-/}\\-/g' \
-e 's/^-/\\-/' \
-e 's/\\^-/\\^\\-/g' \
-e 's/\\0-/\\0\\-/g' \
-e 's/\\|-/\\|\\-/g' \
-e 's/\\-tag \\-width/-tag -width/g' \
   <$1 >$1.ok && mv -f $1.ok $1
